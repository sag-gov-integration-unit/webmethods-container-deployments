# Deploying to a kubernetes cluster an API Gateway standalone with an embedded elasticsearch
# The cluster should provide at least 4 GB of main memory.
---
apiVersion: v1
kind: Service
metadata:
  name: webmethods-apigateway-standalone
  annotations:
    traefik.ingress.kubernetes.io/service.serversscheme: https
spec:
  type: ClusterIP
  ports:
    - port: 9072
      protocol: TCP
      name: gwui
    - port: 5555
      protocol: TCP
      name: gwruntime
    - port: 9073
      protocol: TCP
      name: https-gwui
    - port: 5543
      protocol: TCP
      name: https-gwruntime
  selector:
    app.kubernetes.io/name: webmethods-apigateway-standalone
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: webmethods-apigateway-standalone
spec:
  replicas: 1
  selector:
    matchLabels:
      app.kubernetes.io/name: webmethods-apigateway-standalone
  template:
    metadata:
      labels:
        app.kubernetes.io/name: webmethods-apigateway-standalone
    spec:
      securityContext:
        runAsUser: 1724
        runAsGroup: 1724
        fsGroup: 1724
      containers:
        - name: webmethods-apigateway-standalone
          securityContext:
            allowPrivilegeEscalation: false
          image: ${AWS_ECR}webmethods-apigateway-standalone:${TAG_APIGATEWAY}
          imagePullPolicy: IfNotPresent
          ports:
            - containerPort: 5555
              name: gwruntime
              protocol: TCP
            - containerPort: 9072
              name: gwui
              protocol: TCP
            - containerPort: 5543
              name: https-gwruntime
              protocol: TCP
            - containerPort: 9073
              name: https-gwui
              protocol: TCP
          startupProbe:
            failureThreshold: 30
            exec:
              command:
                - /bin/bash
                - ./healthcheck.sh
          livenessProbe:
            exec:
              command:
                - /bin/bash
                - ./healthcheck.sh
          env:
            - name: APIGW_ELASTICSEARCH_TENANTID
              value: apigateway
            - name: JAVA_MIN_MEM
              value: 512m
            - name: JAVA_MAX_MEM
              value: 512m
            - name: IDS_HEAP_SIZE
              value: 512m
            - name: JAVA_OPTS
              value: ""
            - name: RUNTIME_WATT_PROPERTIES
              value: "watt.net.timeout=400 watt.server.threadPool=50 watt.server.threadPoolMin=25 watt.net.maxClientKeepaliveConns=10"
          resources:
            requests:
              memory: 2Gi
              cpu: 1
            limits:
              memory: 3Gi
              cpu: 2
          volumeMounts:
            - name: wm-derbydb-volume
              mountPath: /opt/softwareag/IntegrationServer/instances/default/db
              subPath: wmderbydb
            - name: webmethods-apigateway-standalone
              mountPath: /opt/softwareag/InternalDataStore/data
              subPath: elastic
      volumes:
        - name: wm-derbydb-volume
          emptyDir:
            sizeLimit: 5Gi
        - name: webmethods-apigateway-standalone
          persistentVolumeClaim:
            claimName: webmethods-apigateway-standalone
---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: webmethods-apigateway-standalone
spec:
  accessModes:
    - "ReadWriteOnce"
  resources:
    requests:
      storage: 10Gi
  storageClassName: "gp2"
---
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: webmethods-apigateway-standalone
  labels:
    app.kubernetes.io/name: webmethods-apigateway-standalone
  annotations:
    traefik.ingress.kubernetes.io/router.entrypoints: web
spec:
  rules:
    - host: webmethods-apigateway.demo1.apimgt.cloud
      http:
        paths:
          - path: /apigatewayui
            pathType: Prefix
            backend:
              service:
                name: webmethods-apigateway-standalone
                port:
                  number: 9073
          - path: /
            pathType: Prefix
            backend:
              service:
                name: webmethods-apigateway-standalone
                port:
                  number: 5543